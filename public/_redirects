# Static assets with proper MIME types and cache busting
/assets/*.js /assets/:splat.js 200
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate

/assets/*.css /assets/:splat.css 200
  Content-Type: text/css; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate

/assets/*.mjs /assets/:splat.mjs 200
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: no-cache, no-store, must-revalidate

# Other static assets
/assets/* /assets/:splat 200
/favicon.ico /favicon.svg 200
/manifest.json /manifest.json 200
/sw.js /sw.js 200

# SPA routing - all other routes to index.html
/* /index.html 200
